{
  "name": "vue-travel-insider",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",

    "test": "npx playwright test",
    "test:e2e": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "report": "npx playwright show-report",

    "test:chromium": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:webkit": "npx playwright test --project=webkit",

    "test:login": "npx playwright test \"tests/load tests/playwright-tests/login.spec.js\"",
    "test:login-spec": "npx playwright test tests/login.spec.js",
    "test:load-test": "npx playwright test tests/load-test.js",
    "test:travelink": "npx playwright test tests/travelink.load.js",

    "test:travellink:chromium": "npx playwright test tests/travellink.spec.js --project=chromium",
    "test:travellink:firefox": "npx playwright test tests/travellink.spec.js --project=firefox",
    "test:travellink:webkit": "npx playwright test tests/travellink.spec.js --project=webkit",

    "test:load:global": "npx k6 run vue-TravelInsider/k6-tests/global.load.js",
    "test:load:travellink": "npx k6 run vue-TravelInsider/k6-tests/k6travellink.load.js",
    "test:load:all": "npm run test:load:global && npm run test:load:travellink",

    "test:chromium:all": "npm run test:chromium && npm run test:load:all",
    "test:firefox:all": "npm run test:firefox && npm run test:load:all",
    "test:webkit:all": "npm run test:webkit && npm run test:load:all",
    "test:all:all": "npm run test:chromium:all && npm run test:firefox:all && npm run test:webkit:all",

    "test:unit": "vitest",

    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",

    "commit:all": "git add -A && git commit -m \"Automated commit from QA pipeline\" && git push"
  },
  "dependencies": {
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.55.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.3.13",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.33.0",
    "eslint-plugin-oxlint": "~1.11.0",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-vue": "~10.4.0",
    "globals": "^16.3.0",
    "jsdom": "^27.0.0",
    "npm-run-all": "^8.0.4",
    "oxlint": "~1.11.0",
    "vite": "^7.1.7",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vitest": "^3.2.4"
  }
}
